                     <effect>
                        <InnerShadow />
                     </effect></Button>
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="50.0" style="-fx-background-color: black;">
               <children>
                  <Button fx:id="savePlaylist" mnemonicParsing="false" onAction="#onSavePlaylistClick" prefHeight="90.0" prefWidth="175.0" style="-fx-background-color: #FFB300;" text="Save Playlist">
                     <effect>
                        <InnerShadow />
                     </effect>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#switchToFrontUI" prefHeight="90.0" prefWidth="175.0" style="-fx-background-color: #FFB300;" text="Return to Frontpage">
                     <effect>
                        <InnerShadow />
                     </effect></Button>
               </children></HBox>
         </children>
      </VBox>
   </center>
