                  <InnerShadow />
               </effect>
            </TextField>
            <ListView fx:id="editPlaylistField" prefHeight="265.0" prefWidth="400.0" style="-fx-background-color: black;" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="50.0" style="-fx-background-color: Black;">
