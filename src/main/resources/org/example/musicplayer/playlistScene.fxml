                     <effect>
                        <InnerShadow />
                     </effect></Button>
                  <Button fx:id="addSong" mnemonicParsing="false" onAction="#transferToEditPlaylist" prefHeight="90.0" prefWidth="275.0" style="-fx-background-color: #FFB300;" text="Add Song">
                     <effect>
                        <InnerShadow />
                     </effect></Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="50.0" style="-fx-background-color: black;">
               <children>
                  <Button fx:id="editPlaylist" mnemonicParsing="false" onAction="#onEditPlaylistClick" prefHeight="90.0" prefWidth="275.0" style="-fx-background-color: #FFB300;" text="Edit Playlist">
                     <effect>
                        <InnerShadow />
                     </effect></Button>
